{
    "compilerOptions": {
      "target": "es6",                     
      "module": "commonjs",                 
      "rootDir": "./src",                  
      "outDir": "./dist",                   
      "strict": true,                      
      "esModuleInterop": true,              
      "skipLibCheck": true,         
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true,            
      "noImplicitAny": false,              
      "moduleResolution": "node",          
      "baseUrl": "./src",                   
      "paths": {                            
        "@domain/*": ["domain/*"],
        "@data/*": ["data/*"],
        "@infra/*": ["infra/*"],
        "@presentation/*": ["presentation/*"],
        "@shared/*": ["shared/*"]
      },
      "typeRoots": ["./node_modules/@types"],  
      "types": ["node"]                     
    },
    "include": ["src/**/*.ts"],             
    "exclude": ["node_modules", "dist", "tests/**/*.spec.ts"]  
  }
  